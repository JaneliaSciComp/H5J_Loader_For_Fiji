<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- http://repo.maven.apache.org/maven2 -->

    <parent>
        <groupId>net.imagej</groupId>
        <artifactId>pom-imagej</artifactId>
        <version>9.0.0</version>
        <relativePath />
    </parent>

    <groupId>org.janelia</groupId>
    <artifactId>H5J_Loader_Plugin</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <name>plugins/h5j_reader.jar</name>
    <description>A Maven project implementing an ImageJ 1.x plugin</description>

    <developers>
        <developer>
            <id>lesfoster</id>
            <name>Les Foster</name>
            <email>fosterl@janelia.hhmi.org</email>
            <url>https://www.janelia.org/</url>
            <organization>Janelia Research Campus</organization>
            <organizationUrl>https://www.janelia.org/</organizationUrl>
            <roles>
                <role>developer</role>
            </roles>
            <timezone>-5</timezone>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com/imagej/h5j_loader-ij1-plugin</connection>
        <developerConnection>scm:git:git@github.com:imagej/h5j_loader-ij1-plugin</developerConnection>
        <tag>HEAD</tag>
        <url>https://github.com/imagej/h5j_loader-ij1-plugin</url>
    </scm>

    <properties>
        <main-class>H5J_Loader</main-class>
    </properties>

    <!-- Establishing a maven repo to ensure the batteries_included file is found. -->
    <repositories>
        <repository>
            <id>FileSystem-Repository</id>
            <name>Filesystem Local Repository</name>
            <url>file://fs_maven_repo</url>
        </repository>
    </repositories>
    
    <dependencies>
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>ij</artifactId>
        </dependency>

        <dependency>
            <groupId>ch.systemsx.cisd.hdf5</groupId>
            <artifactId>sis-jhdf5-batteries_included</artifactId>
            <version>14.12</version>
        </dependency>

        <dependency>
            <groupId>org.bytedeco.javacpp-presets</groupId>
            <artifactId>ffmpeg</artifactId>
            <version>2.6.1-0.11</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>${main-class}</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
